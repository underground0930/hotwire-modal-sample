<%= form_with(model: post, data:{ action: "turbo:submit-end->modals#submitEnd" }) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div><%= form.submit form.object.persisted? ? '更新' : '登録' %></div>
  <div><%= button_tag "閉じる", type: "button", data: { action: "modals#closeModal" } %></div>
<% end %>
